<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImageActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@style/ImageActivityAni</item>
    </style>

    <!-- Animation -->
    <style name="ImageActivityAni" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_scale_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_scale_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_scale_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_scale_out</item>
    </style>

</resources>
